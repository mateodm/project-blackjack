<section class="h-100">
    <div class="background container h-100">
        <div class="row justify-content-sm-center h-100">
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                <div class="text-center my-5">
                </div>
                <div
                    class="card-registro card d-flex align-items-center shadow-lg animate__animated animate__bounceInDown">
                    <div class="card-body p-4 my-3">
                        <h1 class="fs-4 card-title fw-bold mb-4">¡Crea tu cuenta!</h1>
                        <form onsubmit="register(event)">
                            <div class="mb-3">
                                <label class="mb-2 text" for="username">Nombre de usuario</label>
                                <input id="rusername" type="name" class="form-control" name="username" value="" required
                                    autofocus>
                                <div class="invalid-feedback">
                                    El usuario no es valido
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="mb-2 text" for="email">Correo electronico</label>
                                <input id="remail" type="email" class="form-control" name="email" value="" required
                                    autofocus>
                                <div class="invalid-feedback">
                                    El mail no es valido
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="mb-2 text" for="edad">Edad</label>
                                <input id="rage" type="number" class="form-control" name="edad" min="18" max="90"
                                    required>
                                <div class="invalid-feedback">
                                    Ingresa una edad válida (entre 18 y 90 años).
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="mb-2 w-100">
                                    <label class="text me-2" for="password">Contraseña</label>
                                </div>
                                <input id="rpassword" type="password" class="form-control" name="password" required>
                                <div class="invalid-feedback">
                                    La contraseña es requerida
                                </div>
                            </div>

                            <div class="d-flex align-items-center">
                                <button type="submit" class="boton-login btn btn-success ms-auto button-sound">
                                    Registrarse
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer py-3 border-0">
                        <div class="text-center">
                            ¿Ya tienes una cuenta? <a href="/login" class="text-success button-sound">Inicia sesion</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>